{
  "config_type": "sensors",
  "description": "Industrial monitoring system for equipment health, safety, and environmental conditions",
  "sensors": [
    {
      "sensor_id": "factory_environment",
      "sensor_type": "bme680",
      "inputs": {
        "address": 117
      },
      "enabled": true,
      "alias": "Factory Environment",
      "description": "Complete environmental monitoring including air quality"
    },
    {
      "sensor_id": "pressure_monitor",
      "sensor_type": "bmp280",
      "inputs": {
        "address": 119
      },
      "enabled": true,
      "alias": "Pressure Monitor",
      "description": "High-precision pressure monitoring for pneumatic systems"
    },
    {
      "sensor_id": "equipment_vibration",
      "sensor_type": "mpu6050",
      "inputs": {
        "address": 104
      },
      "enabled": true,
      "alias": "Vibration Monitor",
      "description": "6-axis motion sensor for equipment vibration analysis"
    },
    {
      "sensor_id": "motor_voltage",
      "sensor_type": "voltage",
      "inputs": {
        "pin_no": 35,
        "reference_voltage": 3.3,
        "voltage_divider_ratio": 10.0
      },
      "enabled": true,
      "alias": "Motor Voltage Monitor",
      "description": "Motor supply voltage monitoring for electrical health"
    },
    {
      "sensor_id": "current_sensor",
      "sensor_type": "ads1115",
      "inputs": {
        "address": 72,
        "channel": 0,
        "gain": 2
      },
      "enabled": true,
      "alias": "Current Monitor",
      "description": "High-resolution current monitoring for power analysis"
    },
    {
      "sensor_id": "tank_level",
      "sensor_type": "hc_sr04",
      "inputs": {
        "trigger_pin": 5,
        "echo_pin": 18,
        "max_distance": 5.0,
        "threshold_distance": 0.5
      },
      "enabled": true,
      "alias": "Tank Level Monitor",
      "description": "Ultrasonic level monitoring for fluid tanks"
    },
    {
      "sensor_id": "proximity_safety",
      "sensor_type": "vl53l0x",
      "inputs": {
        "address": 41
      },
      "enabled": true,
      "alias": "Safety Proximity",
      "description": "Precise distance monitoring for safety zones"
    },
    {
      "sensor_id": "emergency_stop",
      "sensor_type": "button",
      "inputs": {
        "pin_no": 0,
        "pull_up": true,
        "debounce_ms": 20
      },
      "enabled": true,
      "alias": "Emergency Stop",
      "description": "Emergency stop button for immediate equipment shutdown"
    },
    {
      "sensor_id": "area_motion",
      "sensor_type": "pir",
      "inputs": {
        "pin_no": 12
      },
      "enabled": true,
      "alias": "Area Motion Detection",
      "description": "Motion sensor for personnel detection in work areas"
    },
    {
      "sensor_id": "flood_detection",
      "sensor_type": "water",
      "inputs": {
        "pin_no": 14
      },
      "enabled": true,
      "alias": "Flood Detection",
      "description": "Water detection for equipment protection"
    },
    {
      "sensor_id": "light_monitoring",
      "sensor_type": "bh1750",
      "inputs": {
        "address": 35
      },
      "enabled": true,
      "alias": "Work Area Lighting",
      "description": "Light level monitoring for adequate workspace illumination"
    },
    {
      "sensor_id": "control_panel",
      "sensor_type": "lcd1602",
      "inputs": {
        "address": 39,
        "columns": 16,
        "rows": 2,
        "text": "Industrial\\nMonitor v1.0"
      },
      "enabled": true,
      "alias": "Control Panel Display",
      "description": "Main control panel for system status display"
    },
    {
      "sensor_id": "status_display",
      "sensor_type": "ht16k33",
      "inputs": {
        "address": 112,
        "text": "0000",
        "align_right": true
      },
      "enabled": true,
      "alias": "Status Display",
      "description": "7-segment display for numerical status indicators"
    },
    {
      "sensor_id": "alarm_led",
      "sensor_type": "dout",
      "inputs": {
        "pin_no": 2,
        "initial_value": 0
      },
      "enabled": true,
      "alias": "Alarm Indicator",
      "description": "Visual alarm indicator for critical alerts"
    },
    {
      "sensor_id": "system_health",
      "sensor_type": "temp_internal",
      "enabled": true,
      "alias": "System Health",
      "description": "Internal system temperature monitoring"
    }
  ],
  "alert_thresholds": {
    "factory_environment": {
      "temperature_max": 35.0,
      "humidity_max": 80.0,
      "gas_resistance_min": 50000
    },
    "equipment_vibration": {
      "acceleration_threshold": 2.0,
      "gyro_threshold": 250
    },
    "motor_voltage": {
      "voltage_min": 22.0,
      "voltage_max": 26.0
    },
    "tank_level": {
      "level_min": 0.2,
      "level_max": 4.5
    },
    "proximity_safety": {
      "min_distance": 0.3
    }
  },
  "safety_procedures": [
    {
      "name": "Emergency Shutdown",
      "trigger": "emergency_stop = 1",
      "action": "Immediate equipment shutdown and alarm activation"
    },
    {
      "name": "Proximity Alert",
      "trigger": "proximity_safety < 0.3m",
      "action": "Stop equipment and activate warning signals"
    },
    {
      "name": "Flood Response",
      "trigger": "flood_detection = 1",
      "action": "Power isolation and maintenance notification"
    },
    {
      "name": "Vibration Alert",
      "trigger": "equipment_vibration > threshold",
      "action": "Schedule maintenance inspection"
    }
  ]
}